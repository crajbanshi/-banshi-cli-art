{
	"compilerOptions": {
	  "skipLibCheck": true,
	  "module": "commonjs",
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "target": "es2019",
	  "moduleResolution": "node",
	  "declaration": true,
	  "sourceMap": true,
	  "outDir": "dist",
	  "baseUrl": ".",
	  "paths": {
		"*": ["node_modules/*"]
	  },
	  "resolveJsonModule": true,
	  "lib": [
		"es2019"
	  ],
	  "strict": true  
	},
	"include": ["src/*.ts", "src/*/*.ts"],
	"exclude": ["node_modules", "dist", "test"]
  }